@model IEnumerable<EntityModel.EFModel.User>

@{
	ViewBag.Title = "Quản lý tài khoản";
	Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Quản lý tài khoản</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				Bảng danh sách tài khoản
			</div>
			<!-- /.panel-heading -->
			<div class="panel-body">
				<table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
					<thead>
						<tr>
							<th>ID</th>
							<th>Tên tài khoản</th>
							<th>Họ tên</th>
							<th>Hình</th>
							<th>Trạng thái</th>
							<th>Tùy chọn</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr class="odd gradeX">
								<td>@Html.DisplayFor(modelItem => item.UserID)</td>
								<td>@Html.DisplayFor(modelItem => item.UserName)</td>
								<td>@Html.DisplayFor(modelItem => item.LastName) @Html.DisplayFor(modelItem => item.FirstName)</td>
								<td>@Html.DisplayFor(modelItem => item.Avatar)</td>
								<td class="center">@Html.DisplayFor(modelItem => item.Status)</td>
								<td class="center">
									@Html.ActionLink("Sửa", "Edit", new { id = item.UserID }) |
									@Html.ActionLink("Xem", "Details", new { id = item.UserID }) |
									@Html.ActionLink("Xóa", "Delete", new { id = item.UserID })
								</td>
							</tr>
						}
						
					</tbody>
				</table>
			</div>
			<!-- /.panel-body -->
		</div>
		<!-- /.panel -->
	</div>
	<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
