<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
	<meta name="author" content="">
	<title>Quản lý Điểm du lịch</title>
	<!-- Bootstrap Core CSS -->
	<link href="~/Content/AdministratorTheme/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
	<!-- MetisMenu CSS -->
	<link href="~/Content/AdministratorTheme/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">
	<!-- DataTables CSS -->
	<link href="~/Content/AdministratorTheme/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
	<!-- DataTables Responsive CSS -->
	<link href="~/Content/AdministratorTheme/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">
	<!-- Custom CSS -->
	<link href="~/Content/AdministratorTheme/dist/css/sb-admin-2.css" rel="stylesheet">
	<!-- Custom Fonts -->
	<link href="~/Content/AdministratorTheme/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

</head>
<body>

	<div id="wrapper" class="body-content">
		<!-- Navigation -->
		<nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="">Thung Lũng Tình Yêu</a>
			</div>
			<!-- /.navbar-header -->
			@Html.Partial("_MenuTop")
			<!-- /.navbar-top-links -->
			@Html.Partial("_Menu")

			<!-- /.navbar-static-side -->
		</nav>
		<div id="page-wrapper">
			@RenderBody()
		</div>
		<!-- /#page-wrapper -->
	</div>
	<!-- /#wrapper -->
	<!-- jQuery -->
	<script src="~/Content/AdministratorTheme/vendor/jquery/jquery.min.js"></script>
	<!-- Bootstrap Core JavaScript -->
	<script src="~/Content/AdministratorTheme/vendor/bootstrap/js/bootstrap.min.js"></script>
	<!-- Metis Menu Plugin JavaScript -->
	<script src="~/Content/AdministratorTheme/vendor/metisMenu/metisMenu.min.js"></script>
	<!-- DataTables JavaScript -->
	<script src="~/Content/AdministratorTheme/vendor/datatables/js/jquery.dataTables.min.js"></script>
	<script src="~/Content/AdministratorTheme/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
	<script src="~/Content/AdministratorTheme/vendor/datatables-responsive/dataTables.responsive.js"></script>
	<!-- Custom Theme JavaScript -->
	<script src="~/Content/AdministratorTheme/dist/js/sb-admin-2.js"></script>
	<!-- Page-Level Demo Scripts - Tables - Use for reference -->
	<script>
		//model xóa
		$('.delete-link').click(function (e) {
			var a_href = $(this).attr('href'); /* Lấy giá trị của thuộc tính href */
			e.preventDefault(); /* Không thực hiện action mặc định */
			$.ajax({ /* Gửi request lên server */
				url: a_href, /* Nội dung trong Delete.cshtml cụ thể là deleteModal div được server trả về */
				type: 'GET',
				contentType: 'application/json; charset=utf-8',
				success: function (data) { /* Sau khi nhận được giá */
					$('.body-content').prepend(data); /* body-content div (định nghĩa trong _Layout.cshtml) sẽ thêm deleteModal div vào dưới cùng */
					$('#deleteModal').modal('show'); /* Hiển thị deleteModal div dưới kiểu modal */
				}
			});
		});
	</script>
	<script>
		$(document).ready(function () {
			$('#dataTables-example').DataTable({
				responsive: true
			});
		});
	</script>
	@RenderSection("scripts", required: false)
</body>
</html>
