@model IEnumerable<EntityModel.EF.AccountGroup>

@{
    ViewBag.Title = "Phân quyền";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
	<h1 class="page-header">Phân quyền:</h1>
}
<div class="col-lg-12">
	<a href="/Admin">Trang chủ</a> <p class="fa fa-caret-right"></p> Phân quyền.
</div>
<div class="col-lg-12">
	<div class="panel panel-primary">
		<div class="panel-heading">
			Bảng danh sách phân quyền
			<p class="fa fa-caret-right"></p>
			<p class="fa fa-caret-right"></p> <a href="@Url.Action("Create")" title="Tạo mới tài khoản" class="create-link" style="color: white; text-decoration: none">Tạo mới</a>
		</div>
		<!-- /.panel-heading -->
		<div class="panel-body">
			<table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
				<thead>
					<tr>
						<th>ID</th>
						<th>Tài khoản</th>
						<th>Nhóm</th>
						<th>Trạng thái</th>
						<th>Tùy chọn</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr class="odd gradeX" role="row" id="item_@item.ID">
							<td>
								@Html.DisplayFor(modelItem => item.ID)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Account.UserName)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.GroupPathID)
							</td>
							<td class="center" style="text-align: center;">
								<a href="#" class="btn-active" title="Kích hoạt" data-id="@item.ID" style="text-decoration: none">@(item.status ? "Kích hoạt" : "Khóa")</a>
							</td>
							<td class="center" style="text-align: center;">
								<a href="@Url.Action("Edit", new {@id = item.ID})" title="Sửa quyền tài khoản @item.Account.UserName" class="edit-link" style="text-decoration: none">
									<p class="fa fa-edit"></p>
								</a>
								<a href="@Url.Action("Details", new {@id = item.ID})" title="Xem chi tiết @item.Account.UserName" class="detail-link" style="text-decoration: none">
									<p class="fa fa-folder"></p>
								</a>
								<a href="@Url.Action("Delete", new {@id = item.ID})" title="Xóa @item.Account.UserName" class="delete-link" style="text-decoration: none">
									<p class="fa fa-times"></p>
								</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
		<!-- /.panel-body -->
		<div class="panel-footer">
			<h5>Hãy chọn hiển thị 100 để nhận đủ dữ liệu cho <a href="#" id="btnInThongKe">In bảng</a> </h5>
		</div>
	</div>
	<!-- /.panel -->
</div>
@section scripts{
	<script src="~/Content/AdminTheme/js/Controller/AccountGroupController.js"></script>
}

