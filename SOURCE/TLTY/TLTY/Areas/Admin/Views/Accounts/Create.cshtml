@model EntityModel.EF.Account

@{
	ViewBag.Title = "Tạo mới tài khoản";
	Layout = null;// "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="createModal">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">
					<span aria-hidden="true">&times;</span>
					<span class="sr-only">Close</span>
				</button>
				<h4 class="modal-title">Tạo mới tài khoản </h4>
			</div>
			@using (Html.BeginForm())
			{
				<div class="modal-body">
					@Html.AntiForgeryToken()
					<div class="form-horizontal">
						@Html.ValidationSummary(true, "", new { @class = "text-danger" })
						<div class="col-md-7">
							<div class="form-group">
								<label class="control-label col-md-3">Tài khoản:</label>
								<div class="col-md-9">
									@Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Nhập tên tài khoản ở đây" })
									@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
								</div>
							</div>

							<div class="form-group">
								<label class="control-label col-md-3">Tên:</label>
								<div class="col-md-9">
									@Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = "Nhập tên ở đây" })
									@Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
								</div>
							</div>

							<div class="form-group">
								<label class="control-label col-md-3">Họ:</label>
								<div class="col-md-9">
									@Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "Nhập họ ở đây" })
									@Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
								</div>
							</div>

							<div class="form-group">
								<label class="control-label col-md-3">Ngày sinh:</label>
								<div class="col-md-9">
									@Html.TextBoxFor(model => model.Birthday, new { @class = "form-control", placeholder = "Nhập ngày sinh ở đây, MM/DD/YYYY" })
									@Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
								</div>
							</div>

							<div class="form-group">
								<label class="control-label col-md-3">Email:</label>
								<div class="col-md-9">
									@Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Nhập email ở đây" })
									@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
								</div>
							</div>

							<div class="form-group">
								<label class="control-label col-md-3">Số điện thoại:</label>
								<div class="col-md-9">
									@Html.TextBoxFor(model => model.Phone, new { @class = "form-control", placeholder = "Nhập số điện thoại ở đây" })
									@Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
								</div>
							</div>

							<div class="form-group">
								<label class="control-label col-md-3">Địa chỉ:</label>
								<div class="col-md-9">
									@Html.TextBoxFor(model => model.Address, new { @class = "form-control", placeholder = "Nhập địa chỉ ở đây" })
									@Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
								</div>
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label class="control-label col-md-2">Hình:</label>
								<div class="col-md-12" style="margin-bottom: 10px;">
									<img alt="" id="img" src="" width="200" height="245" class="img-responsive" />
								</div>
								<div class="clearfix"></div>
								<div class="col-md-8">
									@Html.TextBoxFor(model => model.Avatar, new { @class = "form-control disabled", placeholder = "Đường dẫn hình" })
									@Html.ValidationMessageFor(model => model.Avatar, "", new { @class = "text-danger" })
								</div>
								<div class="col-md-4">
									<input type="button" id="Browse" value="Chọn ảnh" class="btn btn-success" />
									<script>
										$('#Browse').click(function () {
											var finder = new CKFinder();
											finder.selectActionFunction = function (fileUrl) {
												//fileUrl = fileUrl.substring(fileUrl.lastIndexOf("/") + 1);
												$('#Avatar').val(fileUrl);
												$('#img').attr('src', fileUrl);
											};
											finder.popup();
										});
									</script>
								</div>
							</div>
						</div>
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="modal-footer">
					<div class="form-actions no-color text-center">
						<input type="submit" value="Tạo mới" class="btn btn-success" />
						<button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
					</div>
				</div>
			}
		</div>
	</div>
</div>
