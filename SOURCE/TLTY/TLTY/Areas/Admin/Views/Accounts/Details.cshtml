@model EntityModel.EF.Account

@{
	ViewBag.Title = "Xem chi tiết tài khoản " + @Model.UserName;
	Layout = null;// "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="detailModal">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">
					<span aria-hidden="true">&times;</span>
					<span class="sr-only">Close</span>
				</button>
				<h4 class="modal-title">Xem chi tiết tài khoản @Model.UserName</h4>
			</div>
			<div class="modal-body">
				<dl class="dl-horizontal">
					<dt>
						Tài khoản:
					</dt>

					<dd>
						@Html.DisplayFor(model => model.UserName)
					</dd>

					<dt>
						Tên
					</dt>

					<dd>
						@Html.DisplayFor(model => model.FirstName)
					</dd>

					<dt>
						Họ:
					</dt>

					<dd>
						@Html.DisplayFor(model => model.LastName)
					</dd>

					<dt>
						Ngày sinh:
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Birthday)
					</dd>

					<dt>
						Email:
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Email)
					</dd>

					<dt>
						Số điện thoại:
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Phone)
					</dd>


					<dt>
						Địa chỉ:
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Address)
					</dd>

					<dt>
						Ngày tạo:
					</dt>

					<dd>
						@Html.DisplayFor(model => model.CreateDate)
					</dd>

				</dl>
				<div class="clearfix"></div>
			</div>
			<div class="modal-footer">
				<div class="form-actions no-color text-center">
					<a href="@Url.Action("Edit", new { @id = Model.ID })" title="Sửa tài khoản @Model.UserName" class="edit-link"><button class="btn btn-warning">Chỉnh sửa</button></a>
					<button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
				</div>
			</div>
		</div>
	</div>
</div>

<script src="~/Content/AdminTheme/js/edit-modal.js"></script>