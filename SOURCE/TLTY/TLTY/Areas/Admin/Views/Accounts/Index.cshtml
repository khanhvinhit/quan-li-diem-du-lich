@model IEnumerable<EntityModel.EF.Account>

@{
	ViewBag.Title = "Danh sách tài khoản";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
	<h1 class="page-header">Danh sách tài khoản:</h1>
}
<div class="col-lg-12">
	<a href="/Admin">Trang chủ</a> <p class="fa fa-caret-right"></p> Danh sách tài khoản.
</div>
<div class="col-lg-12">
	<div class="panel panel-default">
		<div class="panel-heading">
			Bảng danh sách tài khoản <p class="fa fa-caret-right"></p><p class="fa fa-caret-right"></p> <a href="@Url.Action("Create")" title="Tạo mới tài khoản" class="create-link">Tạo mới</a>
		</div>
		<!-- /.panel-heading -->
		<div class="panel-body">
			<table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
				<thead>
					<tr>
						<th>ID</th>
						<th>Tài khoản</th>
						<th>Tên</th>
						<th>Email</th>
						<th>Hình</th>
						<th>Trạng thái</th>
						<th>Tùy chọn</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr class="odd gradeX">
							<td>
								@Html.DisplayFor(modelItem => item.ID)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.UserName)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.FirstName)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Email)
							</td>
							<td class="center">
								@Html.DisplayFor(modelItem => item.Avatar)
							</td>
							<td class="center" style="text-align: center;">
								<a href="#" class="btn-active" title="Kích hoạt" data-id="@item.ID">@(item.Status ? "Kích hoạt" : "Khóa")</a>
							</td>
							<td class="center" style="text-align: center;">
								<a href="@Url.Action("Edit", new { @id = item.ID })" title="Sửa tài khoản @item.UserName" class="edit-link"><p class="fa fa-edit"></p></a>
								<a href="@Url.Action("Details", new { @id = item.ID })" tit title="Xem chi tiết @item.UserName" class="detail-link"><p class="fa fa-folder"></p> </a>
								<a href="@Url.Action("Delete", new { @id = item.ID })" tit title="Xóa @item.UserName" class="delete-link"><p class="fa fa-times"></p> </a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
		<!-- /.panel-body -->
	</div>
	<!-- /.panel -->
</div>