@model EntityModel.EF.Contact

@{
    ViewBag.Title = "Chỉnh sửa liên hệ" + Model.ID;
    Layout = null;// "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="editModal" style="display: block !important;">
    <div class="modal-dialog modal-lg" style="overflow-y: initial !important;overflow-y: scroll; max-height:85%;  margin-top: 50px; margin-bottom:50px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Chỉnh sửa liên hệ @Model.ID</h4>
            </div>
            @using (Html.BeginForm())
            {
                <div class="modal-body" style="height: 400px;overflow-y: auto;">
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)
                        @Html.HiddenFor(model => model.CreateDate)
                        @Html.HiddenFor(model => model.UserName)
                        @Html.HiddenFor(model => model.Status)
						<div class="form-group">
							<label class="control-label col-md-3">Địa chỉ:</label>
							<div class="col-md-9">
								@Html.TextBoxFor(model => model.Address, new { @class = "form-control", placeholder = "Nhập địa chỉ ở đây" })
								@Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
							</div>
						</div>

						<div class="form-group">
							<label class="control-label col-md-3">Số điện thoại:</label>
							<div class="col-md-9">
								@Html.TextBoxFor(model => model.Phone, new { @class = "form-control", placeholder = "Nhập số điện thoại ở đây" })
								@Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
							</div>
						</div>

						<div class="form-group">
							<label class="control-label col-md-3">Email:</label>
							<div class="col-md-9">
								@Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Nhập email ở đây" })
								@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
							</div>
						</div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <div class="form-actions no-color text-center">
                        <input type="submit" value="Thay đổi" class="btn btn-success" />
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
