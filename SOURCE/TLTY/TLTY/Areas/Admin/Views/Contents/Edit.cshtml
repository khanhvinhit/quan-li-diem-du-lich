@model EntityModel.EF.Content

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="editModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Chỉnh sửa nội dung @Model.UserName</h4>
            </div>
            @using (Html.BeginForm())
            {
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)
                        @Html.HiddenFor(model => model.CreateDate)
                        @Html.HiddenFor(model => model.Status)
                        <div class="col-md-7">
                            <div class="form-group">
                                <label class="control-label col-md-3">Tài khoản:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", id = "disabledInput", placeholder = "Nhập tên tài khoản ở đây" })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">Tên:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Nhập tên ở đây" })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">Họ:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.MetaTitle, new { @class = "form-control", placeholder = "Nhập họ ở đây" })
                                    @Html.ValidationMessageFor(model => model.MetaTitle, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">Ngày tạo:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.CreateDate, new { @class = "form-control", placeholder = "Nhập ngày sinh ở đây, MM/DD/YYYY" })
                                    @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">Email:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Nhập email ở đây" })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">Số điện thoại:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.Status, new { @class = "form-control", placeholder = "Nhập số điện thoại ở đây" })
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">Địa chỉ:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.Detail, new { @class = "form-control", placeholder = "Nhập địa chỉ ở đây" })
                                    @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Địa chỉ:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control", placeholder = "Nhập địa chỉ ở đây" })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Địa chỉ:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.Category, new { @class = "form-control", placeholder = "Nhập địa chỉ ở đây" })
                                    @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="form-group">
                                    <label class="control-label col-md-2">Hình:</label>
                                    <div class="col-md-12">
                                        <img alt="" id="img" src="@Model.Images" width="200" height="245" class="img-responsive" />
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.Images, new { @class = "form-control disabled", placeholder = "Đường dẫn hình" })
                                        @Html.ValidationMessageFor(model => model.Images, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-4">
                                        <input type="button" id="Browse" value="Chọn ảnh" class="btn btn-success" />
                                        @* ReSharper disable once InconsistentNaming *@
                                        <script>
										$('#Browse').click(function () {
											var finder = new CKFinder();
											finder.selectActionFunction = function (fileUrl) {
												//fileUrl = fileUrl.substring(fileUrl.lastIndexOf("/") + 1);
												$('#Avatar').val(fileUrl);
												$('#img').attr('src', fileUrl);
											};
											finder.popup();
										});
                                        </script>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <div class="form-actions no-color text-center">
                        <input type="submit" value="Chỉnh sửa" class="btn btn-success" />
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


