@model IEnumerable<EntityModel.EF.Content>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <h1 class="page-header">Danh sách nội dung:</h1>
}
<div class="col-lg-12">
    <a href="/Admin">Trang chủ</a> <p class="fa fa-caret-right"></p> Danh sách nội dung.
</div>
<div class="col-lg-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            Bảng danh sách nội dung
            <p class="fa fa-caret-right"></p>
            <p class="fa fa-caret-right"></p> <a href="@Url.Action("Create")" title="Tạo mới tài khoản" class="create-link" style="color: white; text-decoration: none">Tạo mới</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tiêu đề</th>
                        <th>Lượt xem</th>
                        <th>Thể loại</th>
                        <th>Hình1234</th>
                        <th>Trạng thái333333</th>
                        <th>Tùy chọn</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX" role="row" id="item_@item.ID">
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ViewCount)
                            </td>
                            <td>
                                @{
                            string a = "Tin tức";
                            if (item.Category)
                            {
                                a = "Dịch vụ";
                            }
                                    }
                                    @a
                            </td>
                        <td class="center">
							<img id="img_@item.ID" class="img-responsive" alt="@item.ID" title="Nhấn để chỉnh sửa hình ảnh" src="@item.Images" onclick="selectImage('/Admin/Accounts/ChangeImage/@item.ID',this.id)" />
	                        
                        </td>
                            <td class="center" style="text-align: center;">
                                <a href="#" class="btn-active" title="Kích hoạt" data-id="@item.ID" style="text-decoration: none">@(item.Status ? "Kích hoạt" : "Khóa")</a>
                            </td>
                            <td class="center" style="text-align: center;">
                                <a href="@Url.Action("Edit", new {@id = item.ID})" title="Sửa nội dung @item.UserName" class="edit-link" style="text-decoration: none">
                                    <p class="fa fa-edit"></p>
                                </a>
                                <a href="@Url.Action("Details", new {@id = item.ID})" title="Xem chi tiết @item.UserName" class="detail-link" style="text-decoration: none">
                                    <p class="fa fa-folder"></p>
                                </a>
                                <a href="@Url.Action("Delete", new {@id = item.ID})" title="Xóa @item.UserName" class="delete-link" style="text-decoration: none">
                                    <p class="fa fa-times"></p>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
@section scripts{
    <script src="~/Content/AdminTheme/js/Controller/AccountController.js"></script>
}

