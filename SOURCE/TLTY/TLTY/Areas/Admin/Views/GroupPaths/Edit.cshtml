@model EntityModel.EF.GroupPath

@{
    ViewBag.Title = "Sửa nhóm" + @Model.Name;
    Layout = null;// "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="editModal" style="display: block !important;">
    <div class="modal-dialog modal-lg" style="display: block !important;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Sửa nhóm @Model.Name </h4>
            </div>
            @using (Html.BeginForm())
            {
                <div class="modal-body" style="height: 400px;overflow-y: auto;">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.ID)
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-12">
                            <div class="col-md-7">
                                <div class="form-group">
                                    <label class="control-label col-md-3">Tên:</label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Nhập tiêu đề ở đây" })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">ID Nhóm:</label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.GroupID, new { @class = "form-control", placeholder = "Nhập tên đường dẫn ở đây" })
                                        @Html.ValidationMessageFor(model => model.GroupID, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">ID đường dẫn:</label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.PathID, new { @class = "form-control", placeholder = "Nhập tên đường dẫn ở đây" })
                                        @Html.ValidationMessageFor(model => model.PathID, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <div class="form-actions no-color text-center">
                        <input type="submit" value="Thay đổi" class="btn btn-success" />
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



