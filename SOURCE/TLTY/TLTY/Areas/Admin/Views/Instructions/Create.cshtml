@model EntityModel.EF.Instruction

@{
	ViewBag.Title = "Tạo mới giới thiệu";
	Layout = null;//"~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="createModal">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">
					<span aria-hidden="true">&times;</span>
					<span class="sr-only">Close</span>
				</button>
				<h4 class="modal-title">Tạo mới giới thiệu </h4>
			</div>
			@using (Html.BeginForm())
			{
				<div class="modal-body">
					@Html.AntiForgeryToken()
					<div class="form-horizontal">
						@Html.ValidationSummary(true, "", new { @class = "text-danger" })
							<div class="form-group">
								<label class="control-label col-md-2">Tiêu đề:</label>
								<div class="col-md-10">
									@Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Nhập tiêu đề ở đây." })
									@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
								</div>
							</div>

							<div class="form-group">
								<label class="control-label col-md-2">Nội dung:</label>
								<div class="col-md-10">
									@Html.TextAreaFor(model => model.Detail, new { @class = "form-control", placeholder = "Nhập nội dung ở đây." })
									@Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
								</div>
								<script type="text/javascript">
									CKEDITOR.replace("Detail");
								</script><br />
							</div>

							<div class="form-group">
								<label class="control-label col-md-2">Hình:</label>
								<div class="col-md-3">
									@Html.TextBoxFor(model => model.Images, new { @class = "form-control disabled", placeholder = "Đường dẫn hình" })
									@Html.ValidationMessageFor(model => model.Images, "", new { @class = "text-danger" })
								</div>
								<div class="col-md-3">
									<input type="button" id="Browse" value="Chọn ảnh" class="btn btn-success"/>
									<script>
										$('#Browse').click(function() {
											var finder = new CKFinder();
											finder.selectActionFunction = function(fileUrl) {
												//fileUrl = fileUrl.substring(fileUrl.lastIndexOf("/") + 1);
												$('#Images').val(fileUrl);
												$('#img').attr('src', fileUrl);
											};
											finder.popup();
										});
									</script>
								</div>
								<div class="col-md-4" style="margin-bottom: 10px;">
									<img alt="" id="img" src="" width="200" height="245" class="img-responsive" />
								</div>
							</div>
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="modal-footer">
					<div class="form-actions no-color text-center">
						<input type="submit" value="Tạo mới" class="btn btn-success" />
						<button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
					</div>
				</div>
			}
		</div>
	</div>
</div>
