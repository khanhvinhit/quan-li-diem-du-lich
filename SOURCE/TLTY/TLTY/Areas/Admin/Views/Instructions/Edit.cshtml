@model EntityModel.EF.Instruction

@{
	ViewBag.Title = "Sửa giới thiệu "+@Model.Name;
	Layout = null;// "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="editModal">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			@using (Html.BeginForm())
			{
				<div class="modal-body" style="max-height: 500px;overflow-y: auto;">
					<button type="button" class="close" data-dismiss="modal">
						<span aria-hidden="true">&times;</span>
						<span class="sr-only">Close</span>
					</button>
					<h3 style="text-align: center">Sửa giới thiệu @Model.Name</h3>
					<img src="~/Content/ClientTheme/image/1.png" class="img-responsive" />
					@Html.AntiForgeryToken()
					@Html.HiddenFor(model=>model.MoreImages)
					@Html.HiddenFor(model => model.Status)
					@Html.HiddenFor(model => model.UserName)
					@Html.HiddenFor(model => model.CreateDate)
					<div class="form-horizontal">
						@Html.ValidationSummary(true, "", new { @class = "text-danger" })
						<div class="col-md-12">
							<div class="form-group">
								<label class="control-label col-md-2">Tiêu đề:</label>
								<div class="col-md-10">
									@Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Nhập tiêu đề ở đây" })
									@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
								</div>
							</div>
						</div>
						<div class="col-md-12">
							<div class="form-group">
								<label class="control-label col-md-2">Nội dung:</label>
								<div class="col-md-10">
									@Html.TextAreaFor(model => model.Detail, new {@class = "form-control"})
									@Html.ValidationMessageFor(model => model.Detail, "", new {@class = "text-danger"})
								</div>
								<script type="text/javascript">
									CKEDITOR.replace("Detail");
								</script><br/>
							</div>
							<div class="form-group">
								<label class="control-label col-md-2">Hình:</label>
								<div class="col-md-7">
									@Html.TextBoxFor(model => model.Images, new { @class = "form-control", placeholder = "Đường dẫn hình" })
									@Html.ValidationMessageFor(model => model.Images, "", new {@class = "text-danger"})
								</div>
								<div class="col-md-3">
									<input type="button" id="Browse" value="Chọn ảnh" class="btn btn-primary"/>
									<script>
										$('#Browse').click(function() {
											var finder = new CKFinder();
											finder.selectActionFunction = function(fileUrl) {
												//fileUrl = fileUrl.substring(fileUrl.lastIndexOf("/") + 1);
												$('#Images').val(fileUrl);
												$('#img').attr('src', fileUrl);
											};
											finder.popup();
										});
									</script>
								</div>
								<div class="col-md-2"></div>
								<div class="col-md-10" style="margin-top: 10px;">
									<img alt="" id="img" src="" width="200" height="245" class="img-responsive"/>
								</div>
								<div class="clearfix"></div>
							</div>
						</div>
						<div class="col-md-12">
							<hr/>
							<div class="form-group">
								<div class="form-actions no-color text-center">
									<input type="submit" value="Thay đổi" class="btn btn-success" />
									<button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
								</div>
							</div>
						</div>
					</div>
					<div class="clearfix"></div>
				</div>
				
			}
		</div>
	</div>
</div>
