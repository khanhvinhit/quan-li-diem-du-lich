@model TLTY.Areas.Admin.Models.LoginModel
@{
	if (Session["ClientID"] != null && Session["ClientID"] == null && Session["UserID"] != null)
	{
		Response.Redirect("~/Areas/Admin/Home");
	}
	ViewBag.Title = "Đăng nhập";
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>@ViewBag.Title</title>
	<link href="/favicon.ico" rel="shortcut icon" type="image/x-icon" />
	@Styles.Render("~/Content/admin/css")
	@Scripts.Render("~/bundles/Admin/modernizr")

</head>
<body>
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="col-md-4 col-sm-6 col-md-offset-4">
					<img src="/Data/images/logo/logo.png" class="img-responsive" />
				</div>
			</div>
			<div class="col-md-4 col-sm-6 col-md-offset-4">
				<div class="login-panel panel panel-primary">
					<div class="panel-heading">
						<h3 class="panel-title"><span>Đăng nhập vào hệ thống</span></h3>
					</div>
					<div class="panel-body">
						@using (Html.BeginForm("Login", "Login", FormMethod.Post))
						{
							@Html.AntiForgeryToken()

							if (ViewBag.Error != null)
							{
								<div class="alert alert-danger"><img src="/Data/images/ChucNang/del.png" height="25" width="25" /> @ViewBag.Error</div>
								<div class="clearfix "></div>
							}
							<fieldset>
								<div class="form-group">
									<input class="form-control" placeholder="Nhập tài khoản..." name="UserName" type="text" autofocus>
								</div>
								<div class="form-group">
									<input class="form-control" placeholder="Nhập mật khẩu..." name="Password" type="password" value="">
								</div>
								<button type="submit" class="btn btn-danger btn-block btn-flat">Đăng nhập</button>
							</fieldset>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
	@Scripts.Render("~/bundles/Admin/jquery")
	@Scripts.Render("~/bundles/Admin/bootstrap")
</body>
</html>