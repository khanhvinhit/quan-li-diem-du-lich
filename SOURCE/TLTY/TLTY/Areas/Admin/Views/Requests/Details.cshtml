@model EntityModel.EF.Request

@{
    ViewBag.Title = "Xem chi tiết phản hồi " + @Model.Name;
    Layout = null;// "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="detailModal" style="display: block !important;">
    <div class="modal-dialog modal-lg" style="overflow-y: initial !important;overflow-y: scroll; max-height:85%;  margin-top: 50px; margin-bottom:50px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Xem chi tiết phản hồi @Model.Name</h4>
            </div>
            <div class="modal-body" style="height: 400px;overflow-y: auto;">
                <div class="col-md-7">
                    <dl class="dl-horizontal">
                        <dt>
                            Tên:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt>
                            Email:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                        <dt>
                            Điện thoại:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Phone)
                        </dd>

                        <dt>
                            Thể loại:
                        </dt>

                        <dd>
                            @{
                                string a = "Dịch vụ";
                                if (Model.Content.Category)
                                {
                                    a = "Tin tức";
                                }
                            }@a
                        </dd>
                        <dt>
                            Chi tiết:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Detail)
                        </dd>
                        <dt>
                            Ngày tạo:
                        </dt>

                        <dd>
                            @string.Format("{0:dd-MM-yyyy}", Model.CreateDate) - Tạo bởi: @Html.DisplayFor(model => model.Name)
                        </dd>

                    </dl>
                </div>
                <div class="col-md-5">
                    <img alt="" src="@Model.MoreImage" width="200" height="245" class="img-responsive" />
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="modal-footer">
                <div class="form-actions no-color text-center">
                    
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/AdminTheme/js/edit-modal.js"></script>

