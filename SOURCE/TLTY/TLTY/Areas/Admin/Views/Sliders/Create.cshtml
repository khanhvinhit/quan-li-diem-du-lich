@model EntityModel.EF.Slider

@{
    ViewBag.Title = "Tạo mới trình ảnh";
    Layout = null;// "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="createModal" style="display: block !important;">
    <div class="modal-dialog modal-lg" style="overflow-y: initial !important;overflow-y: scroll; max-height:85%;  margin-top: 50px; margin-bottom:50px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Tạo mới trình ảnh </h4>
            </div>
            @using (Html.BeginForm())
            {
                <div class="modal-body" style="height: 400px;overflow-y: auto;">
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-12">
                            <div class="col-md-7">
                                <div class="form-group">
                                    <label class="control-label col-md-3">Tên:</label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Nhập tên ở đây" })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">Thứ tự:</label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.DisplayOrder, new { @class = "form-control", placeholder = "Nhập thứ tự ở đây" })
                                        @Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">Nội dung:</label>
                                    <div class="col-md-9">
                                        @Html.DropDownList("ContentID",null, new { @class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.ContentID, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">Mô tả:</label>
                                    <div class="col-md-9">
                                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Nhập mô tả ở đây" })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-2">Hình:</label>
                                    <div class="col-md-12" style="margin-bottom: 10px;">
                                        <img alt="" id="img" src="" width="200" height="245" class="img-responsive" />
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.Link, new { @class = "form-control disabled", placeholder = "Đường dẫn hình" })
                                        @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-4">
                                        <input type="button" id="Browse" value="Chọn ảnh" class="btn btn-success" />
                                        <script>
                                            $('#Browse').click(function () {
                                                var finder = new CKFinder();
                                                finder.selectActionFunction = function (fileUrl) {
                                                    //fileUrl = fileUrl.substring(fileUrl.lastIndexOf("/") + 1);
                                                    $('#Link').val(fileUrl);
                                                    $('#img').attr('src', fileUrl);
                                                };
                                                finder.popup();
                                            });
                                        </script>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <div class="form-actions no-color text-center">
                        <input type="submit" value="Tạo mới" class="btn btn-success" />
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


