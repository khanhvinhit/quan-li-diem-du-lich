@model IEnumerable<EntityModel.EF.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <h1 class="page-header">Danh sách trình ảnh: <a href="@Url.Action("Create")" title="Tạo mới tài khoản" class="create-link" style="text-decoration: none; float: right"><button class="btn btn-primary"><i class="fa fa-picture-o"></i> Tạo mới</button></a></h1>
}
<div class="col-lg-12">
    <div class="panel panel-primary">
        <div class="panel-body">
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên</th>
                        <th>Thứ tự</th>
                        <th>Thể loại</th>
                        <th>Hình</th>
                        <th>Trạng thái</th>
                        <th>Tùy chọn</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX" role="row" id="item_@item.ID">
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DisplayOrder)
                            </td>

                            <td>
                                @{
                        string a = "Dịch vụ";
                        if (item.Status)
                        {
                            a = "Tin tức";
                        }
                                }
                                @a
                            </td>
                            <td class="center">
                                <img id="img_@item.ID" title="Nhấn để chỉnh sửa hình ảnh" src="@item.Link" onclick="selectImage('/Admin/Sliders/ChangeImage/@item.ID',this.id)" />
                            </td>
                            <td class="center" style="text-align: center;">
                                <a href="#" class="btn-active" title="Kích hoạt" data-id="@item.ID" style="text-decoration: none">@(item.Status ? "Kích hoạt" : "Khóa")</a>
                            </td>
                            <td class="center" style="text-align: center;">

                                <a href="@Url.Action("Edit", new {@id = item.ID})" title="Sửa nội dung @item.Name" class="edit-link" style="text-decoration: none">
                                    <p class="fa fa-edit"></p>
                                </a>
                                <a href="@Url.Action("Details", new {@id = item.ID})" title="Xem chi tiết @item.Name" class="detail-link" style="text-decoration: none">
                                    <p class="fa fa-folder"></p>
                                </a>
                                <a href="@Url.Action("Delete", new {@id = item.ID})" title="Xóa @item.Name" class="delete-link" style="text-decoration: none">
                                    <p class="fa fa-times"></p>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
	    <!-- /.panel-body -->
		<div class="panel-footer">
			<h5>Hãy chọn hiển thị 100 để nhận đủ dữ liệu cho <a href="#" id="btnInThongKe">In bảng</a> </h5>
		</div>
    </div>
    <!-- /.panel -->
</div>


@section scripts{
    <script src="~/Content/AdminTheme/js/Controller/SliderController.js"></script>
}

