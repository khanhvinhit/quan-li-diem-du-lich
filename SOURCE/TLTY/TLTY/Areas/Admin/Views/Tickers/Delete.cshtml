@model EntityModel.EF.Ticker

@{
    ViewBag.Title = "Xóa bảng giá" + @Model.Name;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="deleteModal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Xóa bảng giá @Model.Name</h4>
            </div>
            <div class="modal-body">
                <h4>Bạn có muốn xóa bảng giá <strong style="color: red;">@Model.Name</strong> này không?</h4>
                <div class="clearfix"></div>
            </div>
            <div class="modal-footer">
                <div class="form-actions no-color text-center">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Xóa" class="btn btn-warning" />
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


