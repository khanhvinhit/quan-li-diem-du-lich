@model EntityModel.EF.Ticker

@{
	ViewBag.Title = "Xóa giá" + @Model.Name;
	Layout = null;// "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="deleteModal" style="display: block !important;">
	<div class="modal-dialog modal-sm" style="overflow-y: initial !important;overflow-y: scroll; max-height:85%;  margin-top: 50px; margin-bottom:50px;">
		<div class="modal-content">
			<div class="modal-body">
				<button type="button" class="close" data-dismiss="modal">
					<span aria-hidden="true">&times;</span>
					<span class="sr-only">Close</span>
				</button>
				<h3 style="text-align: center">Xóa giá @Model.Name</h3>
				<img src="~/Content/ClientTheme/image/1.png" class="img-responsive" />
				<h4>Bạn có muốn xóa giá <strong style="color: red;">@Model.Name</strong> này không?</h4>
				<hr />
				<div class="form-actions no-color text-center">
					@using (Html.BeginForm())
					{
						@Html.AntiForgeryToken()
						<button type="submit" class="btn btn-success"><i class="fa fa-recycle"></i>Xóa</button>
						<button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> Đóng</button>
					}
				</div>

				<div class="clearfix"></div>
			</div>

		</div>
	</div>
</div>
