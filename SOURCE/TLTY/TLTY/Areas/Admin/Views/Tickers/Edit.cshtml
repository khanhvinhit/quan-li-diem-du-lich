@model EntityModel.EF.Ticker

@{
    ViewBag.Title = "Chỉnh sửa bảng giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="editModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Chỉnh sửa bảng giá @Model.UserName</h4>
            </div>
            @using (Html.BeginForm())
            {
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)
                        @Html.HiddenFor(model => model.Name)
                        @Html.HiddenFor(model => model.CreateDate)
                        @Html.HiddenFor(model => model.Status)
                        <div class="col-md-7">

                            <div class="form-group">
                                <label class="control-label col-md-3">Tên:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Nhập tên ở đây" })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">Ngày tạo:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.CreateDate, new { @class = "form-control", placeholder = "Nhập ngày tạo ở đây, MM/DD/YYYY" })
                                    @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">Tài khoản:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", id = "disabledInput", placeholder = "Nhập tên tài khoản ở đây" })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">Trạng thái:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.Status, new { @class = "form-control", placeholder = "Nhập trạng thái ở đây" })
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">Loại:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.Type, new { @class = "form-control", placeholder = "Nhập loại ở đây" })
                                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">Số lượng:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control", placeholder = "Nhập số lượng ở đây" })
                                    @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Giá</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control", placeholder = "Nhập giá ở đây" })
                                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Mô tả</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control", placeholder = "Nhập mô tả ở đây" })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <div class="form-actions no-color text-center">
                        <input type="submit" value="Chỉnh sửa" class="btn btn-success" />
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


