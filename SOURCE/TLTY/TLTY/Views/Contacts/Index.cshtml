
@{
    ViewBag.Title = "Liên hệ tới ban quản trị";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="col-md-8 col-md-offset-2">
	<div class=" col-md-12" style="margin-bottom: 10px;">
		<h1 style="text-align: center;color: #981271; font-weight: bold;">Thông tin liên hệ</h1>
		<div class="col-md-4" style="display: block; text-align: center;">
			<i class="glyphicon glyphicon-ok" style="color: #981271; font-size: 50px;"></i>
			<h5 style="margin-bottom: 20px; margin-top: 20px;">Mai Anh Đào - Phường 8 - Đà Lạt</h5>
		</div>
		<div class="col-md-4" style="display: block; text-align: center;">
			<i class="glyphicon glyphicon-phone-alt" style="color: #981271;font-size: 50px;"></i><h5 style="margin-bottom: 20px; margin-top: 20px;">123456</h5>
		</div>
		<div class="col-md-4" style="display: block; text-align: center;">
			<i class="glyphicon glyphicon-envelope" style="color: #981271; font-size: 50px;"></i><h5 style=" margin-bottom: 20px; margin-top: 20px;">ttt@ghmai</h5>
		</div>
		<div class="clearfix"></div>
	</div>
	<div class="clearfix"></div>
	<div class="col-md-12" style="border: 1px solid aqua;background: #521a61 linear-gradient(55.93deg,purple 0%,navy 100%); padding-bottom: 10px; color: #fff">
		<h1 style="text-align: center;color: #fff; font-weight: bold;">Liện hệ ban quản trị</h1>
		<form action="#" method="#">
			<div class="form-group col-md-6">
				<label for="usr">Tên của bạn:</label>
				<input type="text" class="form-control" id="usr" placeholder="Nhập họ tên của bạn.">
			</div>
			<div class="form-group col-md-6">
				<label for="usr">Số điện thoại:</label>
				<input type="text" class="form-control" id="usr" placeholder="Nhập số điện thoại của bạn.">
			</div>
			<div class="clearfix"></div>
			<div class="form-group col-md-12">
				<label for="usr">Email:</label>
				<input type="Email" class="form-control" id="usr" placeholder="Nhập email của bạn.">
			</div>
			<div class="form-group col-md-12">
				<label for="comment">Yêu cầu:</label>
				<textarea class="form-control" rows="5" id="comment" placeholder="Phản hồi của bạn về dịch vụ."></textarea>
			</div>
			<div class="form-group col-md-12">
				<button class="btn btn-success" type="submit" title="Nhấn để phản hồi." style="width: 100px">Gửi</button>
			</div>
		</form>
		<div class="clearfix"></div>
	</div>
</div>


