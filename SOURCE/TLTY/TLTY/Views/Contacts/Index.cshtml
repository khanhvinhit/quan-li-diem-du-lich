@{
	ViewBag.Title = "Liên hệ tới ban quản trị";
	Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="col-lg-12 baiviet">
	<p><i class="glyphicon glyphicon-home"></i> <a href="/">Giới thiệu</a>/<a href="/lien-he">Liên hệ</a></p>
</div>
<div class="col-lg-12 lienhe">
	<div class="col-md-8 col-md-offset-2 ilienhe">
		<div class=" col-md-12 itlienhe" >
			<h1>Thông tin liên hệ</h1>
			<div class="col-md-4 itelienhe">
				<i class="glyphicon glyphicon-ok"></i>
				<h5>Mai Anh Đào - Phường 8 - Đà Lạt</h5>
			</div>
			<div class="col-md-4 itelienhe">
				<i class="glyphicon glyphicon-phone-alt"></i>
				<h5>123456</h5>
			</div>
			<div class="col-md-4 itelienhe">
				<i class="glyphicon glyphicon-envelope"></i>
				<h5>ttt@ghmai</h5>
			</div>
			<div class="clearfix"></div>
		</div>
		<div class="clearfix"></div>
		<div class="col-md-12 frmlienhe">
			<h1>Liện hệ ban quản trị</h1>
			<form action="#" method="#">
				<div class="form-group col-md-6">
					<label>Tên của bạn:</label>
					<input type="text" class="form-control" placeholder="Nhập họ tên của bạn.">
				</div>
				<div class="form-group col-md-6">
					<label>Số điện thoại:</label>
					<input type="text" class="form-control" placeholder="Nhập số điện thoại của bạn.">
				</div>
				<div class="clearfix"></div>
				<div class="form-group col-md-12">
					<label>Email:</label>
					<input type="Email" class="form-control" placeholder="Nhập email của bạn.">
				</div>
				<div class="form-group col-md-12">
					<label for="comment">Yêu cầu:</label>
					<textarea class="form-control" rows="5" id="comment" placeholder="Phản hồi của bạn về dịch vụ."></textarea>
				</div>
				<div class="form-group col-md-12">
					<button class="btn btn-success" type="submit" title="Nhấn để phản hồi." style="width: 100px">Gửi</button>
				</div>
			</form>
			<div class="clearfix"></div>
		</div>
	</div>
</div>

