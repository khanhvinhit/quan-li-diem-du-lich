@model List<EntityModel.EF.Slider>
@{
	var content = ((List<EntityModel.EF.Content>)ViewBag.Content);
}

@if (@Model != null || Model.Count > 0)
{
	int i = 0;
	int j = 0;
	<div class="container">
		<div class="row" id="slider">
			<div class="col-md-12">
				<div id="mySlider" class="carousel slide">
					<div class="carousel-inner">
						@foreach (var item in Model)
						{
							<div class="@(i==0?"active":"") item" data-slide-number="@i">
								<img src="@item.Link">
								<div class="carousel-caption">
									@foreach (var ct in content.Where(x => x.ID == item.ContentID))
									{
										<a href="/@(ct.Category ? "tin-tuc/chi-tiet/" : "dich-vu/chi-tiet/")/@ct.MetaTitle-@ct.ID">
											<h3>@item.Name</h3>
										</a>
									}
									<p>@item.Description</p>
								</div>
							</div>
									i++;
						}
					</div>
					<!-- Controls-->
					<a class="left carousel-control" href="#mySlider" role="button" data-slide="prev">
						<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="right carousel-control" href="#mySlider" role="button" data-slide="next">
						<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12" id="slider-thumbs">
				<ul class="list-inline">
					@foreach (var item in Model)
					{
						<li>
							<a id="carousel-thumb-@j" class="@(j == 0 ? "selected" : "")">
								<img src="@item.Link" style="width: 70px; height: 50px">
							</a>
						</li>
						j++;
					}
				</ul>
			</div>
		</div>
	</div>
}
else
{
	<div class="container">
		<div class="row" id="slider">
			<div class="alert alert-info">
				<h3>Slider đang được cập nhật</h3>
			</div>
		</div>
	</div>
}