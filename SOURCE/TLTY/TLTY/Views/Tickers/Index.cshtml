@model List<EntityModel.EF.Ticker>
@{
	ViewBag.Title = "Bảng giá khu du lịch";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header
{
	<header>
		<div class="container">
			<div class="row">
				<div class="col-md-12 col-xs12 col-sm-12">
					<div class="nav">
						<nav class="navbar navbar-default navbar-fixed-top">
							<div class="container header-top">
								<div class="navbar-header">
									<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
										<span class="sr-only">Toggle navigation</span>
										<span class="icon-bar"></span>
										<span class="icon-bar"></span>
										<span class="icon-bar"></span>
									</button>
									<a href="/" title="Thung lũng tình yêu">
										<img src="~/DATA/images/Logo/logo.png" alt="logo" width="90" height="60" class="img-responsive">
									</a>
								</div>
								<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
									<ul class="nav navbar-nav navbar-right" id="menu">
										<li><a href="/" title="Trang giới thiệu">Giới thiệu</a></li>
										<li><a href="/dich-vu" title="Trang dịch vụ">Dịch vụ</a></li>
										<li><a href="/tin-tuc" title="Trang tin tức">Tin tức</a></li>
										<li class="active"><a href="/bang-gia" title="Trang bảng giá">Bảng giá</a></li>
										<li><a href="/lien-he" title="Trang liên hệ">Liên hệ</a></li>
										<li>
											<a href="#" class="dropdown-toggle" data-toggle="dropdown" title="Nhấn để thay đổi giao diện"><i class="glyphicon glyphicon-cog"></i></a>
											<ul class="dropdown-menu">
												<li><a href="#theme" onclick="switch_style('theme1'); return false;" id="them1" title="Tinh khôi">Cây cỏ</a></li>
												<li><a href="#theme" onclick="switch_style('theme2'); return false;" id="them2" title="Huyền ảo">Đất trời</a></li>
											</ul>
										</li>
									</ul>
								</div>
							</div>
						</nav>
					</div>
				</div>
			</div>
		</div>
	</header>
}
<div class="col-lg-12 baiviet">
	<p>
		<i class="glyphicon glyphicon-home"></i> <a href="/">Giới thiệu</a>/ <a href="/bang-gia">Bảng giá</a>
	</p>
</div>
<div class="col-md-12">
	<div class="container lg">
		<h1>Bảng giá khu du lịch</h1>
	</div>
	<div class="container gach"></div>
	<div class="clearfix"></div>
</div>
<div class="col-md-12 baiviet">
	<div class="col-md-8 col-md-offset-2">
		<img src="~/Content/ClientTheme/image/1.png" class="img-responsive">
	</div>
	@if (Model != null || Model.Count > 0)
	{
		<div class="col-md-8 col-md-offset-2 binhluan">
			<ol>
				@foreach (var item in Model)
				{
					<li style="font-size: 24px">
						<h3>
							<i class="fa fa-users" style="color: red"></i> @item.Name - <i class="fa fa-calendar" style="color: red"></i> @string.Format("{0:dd/MM/yyyy}", @item.CreateDate)
						</h3>
						<div style="margin-left: 50px">
							<i class="fa fa-user" style="color: red"></i> @(item.Type ? "Người lớn" : "Trẻ em") - <i class="fa fa-caret-right" style="color: red"></i> @item.Quantity người - <i class="fa fa-money" style="color: red"></i> @item.Price.ToString("N0") VNĐ
							<p>
								<i class="fa fa-sticky-note" style="color: red"></i> @item.Description
							</p>
						</div>
					</li>
				}
			</ol>
			<div class="col-md-6">
				<h1>Xin cảm ơn sự ủng hộ của quý khách!!!</h1>
			</div>
			<div class="col-md-6">
				<h4>Mọi ý kiến thắc mắc xin vui lòng liên hệ:</h4>
				<h3>CÔNG TY CỔ PHẦN DU LỊCH THÀNH THÀNH CÔNG LÂM ĐỒNG</h3>
				<h3>CHI NHÁNH TÌNH YÊU MỘNG MƠ</h3>
				<h4>A. Số 5 - 7 Mai Anh Đào, Phường 8, Tp. Đà Lạt, Lâm Đồng</h4>
				<h4>T. (+84) 63 3821 448 | F. (+84) 63 3552 774</h4>
				<h4>E. info@tinhyeumongmo.vn</h4>
				<h4>W. www.tinhyeumongmo.vn</h4>
			</div>
		</div>
	}
	else
	{
		<h3>Đang cập nhật</h3>
	}

	<div class="clearfix"></div>
</div>
<div class="clearfix"></div>

